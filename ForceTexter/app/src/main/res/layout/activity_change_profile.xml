<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dinesh.forcetexter.ChangeProfileActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Change your details"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/oldPasswordInputLayout"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:textSize="15dp"
            android:id="@+id/oldPasswordField"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="54dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/newPasswordLayout"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/oldPasswordInputLayout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15dp"
            android:id="@+id/newPasswordField"
            android:inputType="textPassword"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/newPasswordLayout"
        android:id="@+id/newConfirmPasswordLayout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15dp"
            android:id="@+id/newConfirmPasswordField"
            android:inputType="textPassword"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:theme="@style/Button"
        android:text="Change"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:id="@+id/changeButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/newConfirmPasswordLayout" />
</RelativeLayout>
