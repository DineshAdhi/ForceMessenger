<android.support.v7.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:elevation="20dp"
    android:background="@color/colorPrimary"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">



        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="0dp"
            android:id="@+id/userImageActionbarLayout"
            android:src="@drawable/userimmge"
            android:backgroundTint="@color/colorWhite"
            android:layout_alignBottom="@+id/toolbarOnlineStatus"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:id="@+id/toolbarUserName"
            android:gravity="bottom"
            android:contextClickable="true"
            android:scrollbarStyle="insideInset"
            android:textColor="@color/colorWhite"
            android:text="Dinesh Adhithya"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/userImageActionbarLayout" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:id="@+id/toolbarOnlineStatus"
            android:text=""
            android:textSize="12dp"
            android:textColor="@color/colorWhite"
            android:layoutDirection="inherit"
            android:layout_weight="6.38"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/userImageActionbarLayout" />

    </RelativeLayout>


    </android.support.v7.widget.Toolbar>
